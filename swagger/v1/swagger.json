{
  "swagger": "2.0",
  "securityDefinitions": {
    "APIKeyHeader": {
      "in": "header",
      "type": "apiKey",
      "name": "Authorization",
      "required": true
    }
  },
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "basePath": "/api/v1",
  "paths": {
    "/users/sign_up": {
      "post": {
        "summary": "Creates an account",
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstname": {
                  "type": "string"
                },
                "lastname": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "password_confirmation": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password",
                "password_confirmation"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created"
          },
          "422": {
            "description": "Unprocessable Entity"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Sign in",
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/refresh_token": {
      "get": {
        "summary": "Refresh jwt token",
        "security": [
          {
            "APIKeyHeader": [

            ]
          }
        ],
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New JWT Token"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/users/infos": {
      "get": {
        "summary": "Current user informations",
        "security": [
          {
            "APIKeyHeader": [

            ]
          }
        ],
        "tags": [
          "Users"
        ],
        "consumes": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User informations"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}